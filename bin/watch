#!/bin/bash

export FRONTEND_URL=http://localhost:8000
export BACKEND_URL=http://localhost:8080

if [ "$1" != "backend" ]; then
  cd packages/frontend-web
  npm run compile
  npm run compile:watch &
  npm run watch &
  cd -
fi

if [ "$1" != "frontend" ]; then
  cd packages/backend-api
  npm run watch &
  cd -
fi

wait

#!/bin/bash
set -e

export FRONTEND_URL=http://localhost:8000
export API_URL=http://localhost:8080

if [ -z "$1" ]; then
  FRONTEND=1
  BACKEND=1
else
  while [ -n "$1" ]; do
    if [ "$1" == frontend ]; then
      FRONTEND=1
    elif [ "$1" == backend ]; then
      BACKEND=1
    elif [ "$1" == justweb ]; then
      BACKEND=1
      JUSTWEB=1
    fi
    shift
  done
fi

if [ -n "$FRONTEND" ]; then
  cd packages/frontend-web
  npm run watch &
  cd -
fi

if [ -n "$BACKEND" ]; then
  cd packages/frontend-web
  npm run compile:lib
  cd -
  cd packages/backend-api
  npx ts-node-dev --inspect=5858 src/server.ts &
  if [ -z "$JUSTWEB" ]; then
    npx ts-node-dev --inspect=5857 src/processor.ts &
    npx ts-node-dev --inspect=5856 src/worker.ts &
  fi
  cd -
fi

wait
